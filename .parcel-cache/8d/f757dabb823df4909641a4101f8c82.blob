@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap");
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box; }

html {
  font-size: 62.5%; }

:root {
  --color-primary: #078282ff;
  --color-primary-darker: #0c6b6b;
  --color-secondary: #20bf55;
  --color-secondary-darker: #139940;
  --color-orange: #f77f00;
  --color-red: #ff6347;
  --color-red-darker: #d8482e;
  --color-white: #eee;
  --color-grey-light: #dfdfdf;
  --color-grey-dark: #8d8d8d;
  --color-grey-very-dark: #646464;
  --color-black: #112222;
  --font-primary: 'Roboto', sans-serif; }

body {
  background-color: var(--color-primary);
  color: var(--color-black);
  font-size: 1.6rem;
  font-family: var(--font-primary); }

.header-primary {
  font-weight: 400; }

.toggle {
  display: flex;
  align-items: center;
  gap: 1rem; }
  .toggle__btn {
    border: none;
    outline: none;
    background-color: var(--color-grey-light);
    border: 1px solid var(--color-grey-dark);
    width: 4rem;
    height: 2rem;
    cursor: pointer;
    position: relative; }
    .toggle__btn::before {
      content: '';
      position: absolute;
      top: 0;
      height: 100%;
      width: 50%;
      background-color: var(--color-grey-dark);
      transition: 1s; }
    .toggle__btn.active::before {
      right: 0; }
    .toggle__btn.not-active::before {
      left: 0; }
    .toggle__btn:hover::before {
      background-color: var(--color-grey-very-dark); }

.task {
  display: flex;
  gap: 1rem;
  align-items: center; }
  .task__drag {
    display: flex;
    flex-direction: column;
    height: 5rem;
    width: 4rem;
    cursor: move;
    padding: 0.5rem 0.5rem;
    transition: all 0.2s; }
    .task__drag:hover {
      background-color: var(--color-grey-light); }
  .task__circle-group {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-around; }
  .task__circle {
    width: 1.1rem;
    height: 1.1rem;
    border-radius: 50%;
    background-color: var(--color-grey-dark); }
  .task__content {
    flex: 1;
    display: flex;
    gap: 1rem;
    border: 1px solid var(--color-grey-dark); }
  .task__complete {
    border: none;
    outline: none;
    cursor: pointer;
    background-color: var(--color-secondary);
    transition: all 0.2s; }
    .task__complete svg {
      fill: var(--color-white);
      width: 5rem;
      height: 5rem; }
    .task__complete:hover {
      background-color: var(--color-secondary-darker); }
  .task__desc {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around; }
  .task__title {
    font-size: 2rem; }
  .task__date {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-grey-dark); }
  .task__btns {
    display: flex; }
  .task__btn {
    border: none;
    outline: none;
    cursor: pointer;
    background-color: transparent; }
    .task__btn svg {
      width: 4em;
      height: 4rem;
      transition: all 0.2s; }
    .task__btn:first-child svg {
      fill: var(--color-primary); }
    .task__btn:first-child:hover svg {
      fill: var(--color-primary-darker); }
    .task__btn:last-child svg {
      fill: var(--color-red); }
    .task__btn:last-child:hover svg {
      fill: var(--color-red-darker); }

.app {
  background-color: var(--color-white);
  max-width: 900px;
  margin: 3rem auto; }
  .app__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem; }

.nav {
  background-color: var(--color-grey-light);
  padding: 1rem 0;
  display: flex;
  justify-content: center; }

.configs {
  display: flex;
  justify-content: space-between; }

.tasksList {
  height: 50rem; }
