@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap");
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html {
  font-size: 62.5%;
}
:root {
  --color-primary: #078282ff;
  --color-primary-darker: #0c6b6b;
  --color-green: #20bf55;
  --color-green-darker: #139940;
  --color-orange: #f77f00;
  --color-orange-darker: #ff7300;
  --color-red: #ff6347;
  --color-red-darker: #d8482e;
  --color-white: #eee;
  --color-grey-light: #dfdfdf;
  --color-grey-dark: #8d8d8d;
  --color-grey-very-dark: #646464;
  --color-black: #112222;
  --font-primary: "Roboto", sans-serif;
}
body {
  background-color: var(--color-primary);
  color: var(--color-black);
  font-size: 1.6rem;
  font-family: var(--font-primary);
}
.header-primary {
  font-weight: 400;
}
.header-secondary {
  font-size: 2.2rem;
  font-weight: 200;
}
.toggle {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.toggle__btn {
  border: none;
  outline: none;
  background-color: var(--color-grey-light);
  border: 1px solid var(--color-grey-dark);
  width: 4rem;
  height: 2rem;
  cursor: pointer;
  position: relative;
}
.toggle__btn::before {
  content: "";
  position: absolute;
  top: 0;
  height: 100%;
  width: 50%;
  background-color: var(--color-grey-dark);
  transition: 1s;
}
.toggle__btn.active::before {
  right: 0;
}
.toggle__btn.not-active::before {
  left: 0;
}
.toggle__btn:hover::before {
  background-color: var(--color-grey-very-dark);
}
.task {
  display: flex;
  gap: 1rem;
  align-items: center;
}
.task__drag {
  display: flex;
  flex-direction: column;
  height: 5rem;
  width: 4rem;
  cursor: move;
  padding: 0.5rem 0.5rem;
  transition: all 0.5s;
}
.task__drag:hover {
  background-color: var(--color-grey-light);
}
.task__circle-group {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.task__circle {
  width: 1.1rem;
  height: 1.1rem;
  border-radius: 50%;
  background-color: var(--color-grey-dark);
}
.task__content {
  flex: 1;
  display: flex;
  position: relative;
  z-index: 10;
  gap: 1rem;
  border: 1px solid var(--color-grey-dark);
}
.task__complete {
  border: none;
  outline: none;
  cursor: pointer;
  transition: all 0.2s;
}
.task__complete svg {
  fill: var(--color-white);
  width: 5rem;
  height: 5rem;
}
.task.easy .task__complete {
  background-color: var(--color-green);
}
.task.easy .task__complete:hover {
  background-color: var(--color-green-darker);
}
.task.med .task__complete {
  background-color: var(--color-orange);
}
.task.med .task__complete:hover {
  background-color: var(--color-orange-darker);
}
.task.high .task__complete {
  background-color: var(--color-red);
}
.task.high .task__complete:hover {
  background-color: var(--color-red-darker);
}
.task__desc {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.task__title {
  font-size: 2rem;
}
.task__date {
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--color-grey-dark);
}
.task__btns {
  display: flex;
}
.task__btn {
  border: none;
  outline: none;
  background-color: transparent;
  cursor: pointer;
}
.task__btn svg {
  width: 4rem;
  height: 4rem;
  transition: all 0.2s;
  fill: var(--color-grey-dark);
  transition: all 0.2s;
}
.task__btn svg:hover {
  fill: var(--color-grey-very-dark);
}
.submit {
  width: 3.8rem !important;
  height: 3.8rem !important;
}
.app {
  background-color: var(--color-white);
  max-width: 900px;
  margin: 3rem auto;
}
.app__container {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 2rem;
}
.nav {
  background-color: var(--color-grey-light);
  padding: 1rem 0;
  display: flex;
  justify-content: center;
}
.configs {
  display: flex;
  justify-content: space-between;
}
.tasksList {
  height: 50rem;
  overflow-y: scroll;
}
.form {
  height: 12rem;
  padding: 0.5rem;
  display: grid;
  grid-template-rows: 1fr 2fr 2fr;
  grid-template-columns: repeat(4, 1fr);
  grid-template-areas: "head  head  head   head" "title title prio   date" "confirm confirm cancel cancel";
  border: 1px solid var(--color-grey-dark);
  color: var(--color-black);
  gap: 0.5rem;
}
.form input,
.form select {
  font-size: 1.6rem;
  padding: 0 1rem;
  height: 100%;
  border: none;
  outline: none;
  appearance: none;
  font-family: inherit;
  color: inherit;
}
.form__header {
  grid-area: head;
  text-align: center;
}
.form__title {
  grid-area: title;
}
.form__title::placeholder {
  color: var(--color-grey-very-dark);
}
.form__select {
  grid-area: prio;
}
.form__select select {
  width: 100%;
}
.form__select.hard select {
  background-color: var(--color-red);
}
.form__select.hard svg {
  fill: var(--color-red);
}
.form__select.med select {
  background-color: var(--color-orange);
}
.form__select.med svg {
  fill: var(--color-orange);
}
.form__select.low select {
  background-color: var(--color-green);
}
.form__select.low svg {
  fill: var(--color-green);
}
.form__date {
  grid-area: date;
}
.form__date, .form__select {
  display: flex;
  align-items: center;
  gap: 1rem;
}
.form__icon {
  width: 2.5rem;
  height: 2.5rem;
  fill: var(--color-grey-very-dark);
}
.form__btn {
  outline: none;
  border: none;
  background-color: var(--color-grey-very-dark);
  color: var(--color-white);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
}
.form__btn svg {
  fill: var(--color-white);
  width: 3rem;
  height: 3rem;
}
.form__btn span {
  font-size: 2rem;
  font-family: var(--font-primary);
  font-weight: 200;
  margin-left: 1rem;
}
.form__btn:hover {
  fill: var(--color-grey-dark);
}
.form__btn--cancel {
  grid-area: cancel;
}
.form__btn--confirm {
  grid-area: confirm;
}